<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_workout_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <FrameLayout
            android:id="@+id/icon_background"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle_background"> <ImageView
            android:id="@+id/img_workout_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_fitness"
            app:tint="#FFFFFF"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_workout_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Body Power"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/text_workout_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Quema grasa y gana fuerza"
                android:textSize="14sp"
                android:textColor="#757575"
                android:maxLines="2"
                android:ellipsize="end"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â± 45 min"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:background="#F0F0F0"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"/>

                <TextView
                    android:id="@+id/text_difficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="ðŸ”¥ DifÃ­cil"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:background="#F0F0F0"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"/>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_media_play"
            app:tint="#CCCCCC"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>