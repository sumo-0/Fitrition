<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/iv_meal"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_nutrition"
            android:scaleType="centerInside"
            android:background="#E0E0E0"
            android:padding="16dp"
            android:contentDescription="Ãcono de comida" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_meal_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de la comida"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tv_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="450 kcal"
                android:textSize="14sp"
                android:textColor="#FF6B6B"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_macros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="P: 25g | C: 40g | G: 15g"
                android:textSize="12sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="11/02/2026 14:30"
                android:textSize="11sp"
                android:textColor="#999999" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>