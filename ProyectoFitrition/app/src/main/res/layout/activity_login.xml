    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fitrition"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="#FF6B6B"
        android:layout_marginBottom="8dp" />

    <TextView
