<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registro de Comidas"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Registra tus comidas diarias"
            android:textSize="14sp"
            android:textColor="#666666" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_food_camera"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Añadir con Cámara"
                app:icon="@android:drawable/ic_menu_camera"
                app:cornerRadius="12dp"
                android:padding="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_food_manual"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Añadir Manualmente"
                app:icon="@android:drawable/ic_input_add"
                app:cornerRadius="12dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:padding="12dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Registro de Agua Diaria"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/water_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="0 / 10 vasos (Meta: 2.5L)"
            android:textSize="14sp"
            android:textColor="#666666" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="5"
                android:rowCount="2"
                android:padding="16dp"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:useDefaultMargins="true">

                <ImageView android:id="@+id/water_glass_1" android:src="@drawable/ic_water_empty" android:layout_width="0dp" android:layout_height="48dp" android:layout_columnWeight="1" android:layout_margin="4dp"/>
                <ImageView android:id="@+id/water_glass_2" android:src="@drawable/ic_water_empty" android:layout_width="0dp" android:layout_height="48dp" android:layout_columnWeight="1" android:layout_margin="4dp"/>
                <ImageView android:id="@+id/water_glass_3" android:src="@drawable/ic_water_empty" android:layout_width="0dp" android:layout_height="48dp" android:layout_columnWeight="1" android:layout_margin="4dp"/>
                <ImageView android:id="@+id/water_glass_4" android:src="@drawable/ic_water_empty" android:layout_width="0dp" android:layout_height="48dp" android:layout_columnWeight="1" android:layout_margin="4dp"/>
                <ImageView android:id="@+id/water_glass_5" android:src="@drawable/ic_water_empty" android:layout_width="0dp" android:layout_height="48dp" android:layout_columnWeight="1" android:layout_margin="4dp"/>

                <ImageView android:id="@+id/water_glass_6" android:src="@drawable/ic_water_empty" android:layout_width="0dp" android:layout_height="48dp" android:layout_columnWeight="1" android:layout_margin="4dp"/>
                <ImageView android:id="@+id/water_glass_7" android:src="@drawable/ic_water_empty" android:layout_width="0dp" android:layout_height="48dp" android:layout_columnWeight="1" android:layout_margin="4dp"/>
                <ImageView android:id="@+id/water_glass_8" android:src="@drawable/ic_water_empty" android:layout_width="0dp" android:layout_height="48dp" android:layout_columnWeight="1" android:layout_margin="4dp"/>
                <ImageView android:id="@+id/water_glass_9" android:src="@drawable/ic_water_empty" android:layout_width="0dp" android:layout_height="48dp" android:layout_columnWeight="1" android:layout_margin="4dp"/>
                <ImageView android:id="@+id/water_glass_10" android:src="@drawable/ic_water_empty" android:layout_width="0dp" android:layout_height="48dp" android:layout_columnWeight="1" android:layout_margin="4dp"/>

            </GridLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>